{
    /* editor */
    "editor.fontFamily": "'0xProto Nerd Font Mono', 'FiraMono Nerd Font Mono', 'FiraCode Nerd Font Regular', 'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    // "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",

    /* workbench */
    "workbench.colorTheme": "Quiet Light",
    "workbench.sideBar.location": "right",

    /* vscode-neovim */
    "vscode-neovim.useWSL": true,
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/vscode/nvim/init.lua",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/vscode/nvim/init.lua",

    /* golang */
    "gopls": {
        "ui.semanticTokens": true,
    },

    /* extensions */
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    /* copilot */
    "github.copilot.editor.enableAutoCompletions": true,

    /* security */
    "security.workspace.trust.untrustedFiles": "open",
}
